@model Cinematheque.WebSite.Models.GenreAndFilmsView

<h2>@Html.DisplayFor(model => model.Genre.Name)</h2>

@if (Model.Films.Count() > 0)
{
    <h4>Films of genre </h4>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Films.First().Title)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Films.First().ReleaseDate)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Films.First().Duration)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Films.First().Genres)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Films.First().IMDbRating)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model.Films)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.ReleaseDate)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Duration)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.GenresString)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.IMDbRating)
                </td>

                <td>
                    @Html.ActionLink("Edit", "Edit", "Films", new { id = item.ID }, new { }) |
                    @Html.ActionLink("Details", "Details", "Films", new { id = item.ID }, new { }) |
                    @Html.ActionLink("Delete", "Delete", "Films", new { id = item.ID }, new { })
                </td>
            </tr>
        }
    </table>
}
else
{
    <div>Sorry, but no such films were found</div>
}
