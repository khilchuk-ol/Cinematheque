@model Cinematheque.WebSite.Models.ActorView

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <table>
        <tr>
            <td>
                <img width="340" height="500" src="/images/actors/@Model.PhotoFileNames.First()" />
            </td>
            <td>
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Name)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Surname)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Surname)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Birth)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Birth)
                    </dd>

                    @if (Model.Death.HasValue)
                    {
                        <dt>
                            @Html.DisplayNameFor(model => model.Death)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Death.Value)
                        </dd>
                    }

                    <dt>
                        @Html.DisplayNameFor(model => model.Gender)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Gender)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Country)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Country)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.FilmsStared)
                    </dt>

                    <dd>
                        <ul>
                            @foreach (var pair in Model.FilmsStared)
                            {
                                <li>@Html.ActionLink(pair.Value, "Details", "Films", new { id = pair.Key }, null)</li>
                            }
                        </ul>
                    </dd>

                </dl>

                @using (Html.BeginForm("DoDelete", "Actors", new { Id = Model.ID }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-default" /> |
                        @Html.ActionLink("Back to List", "Index")
                    </div>
                }
                /td>
        </tr>
    </table>
</div>
